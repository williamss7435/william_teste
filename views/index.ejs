<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Projeto Corridas Compartilhadas</title>
    <link rel="stylesheet" href="src/bootstrap-4.2.1-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>  
        <!-- Start Navbar -->
        <nav class="navbar navbar-expand-lg main-navbar navbar-light" style="width: 100%">
            <a class="navbar-brand" href="#"><img src="img/logo-easycar-small.png" alt=""></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto ml-lg-5">
                    <li class="nav-item justify-content-center mb-3 mb-lg-0">
                        <btn class="btn btn-block btn-running" id="btn-add-new-running">Adicinar Nova Corrida</btn>
                    </li>
                    <li class="nav-item ml-lg-5 justify-content-center mb-3 mb-lg-0 d-lg-none">
                        <btn class="btn btn-block btn-options btn-screen-driver">Motoristas</btn>
                    </li>
                    <li class="nav-item ml-lg-2 justify-content-center mb-3 mb-lg-0 d-lg-none">
                        <btn class="btn btn-block btn-options btn-screen-user">Passageiros</btn>
                    </li>
                    <li class="nav-item ml-lg-2 justify-content-center mb-3 mb-lg-0 d-lg-none">
                        <btn class="btn btn-block btn-options btn-screen-race">Corridas</btn>
                    </li>
                  </ul>
            </div>
        </nav>
        <!-- End Navbar -->

        <!-- Start MainScreen -->
        <div class="container-fluid" style="height: 87.5%">
            <div class="row" style="height: 100%">
                <div class="col-2 d-none d-lg-block pl-5 pr-5" id="menu-lg-options">
                        <div class="row"><btn class="btn btn-block btn-options mt-3 btn-screen-driver">Motoristas</btn></div>
                        <div class="row"><btn class="btn btn-block btn-options mt-3 btn-screen-user">Passageiros</btn></div>
                        <div class="row"><btn class="btn btn-block btn-options mt-3 btn-screen-race">Corridas</btn></div>
                </div>

                <!-- Start ScreenDriver -->
                <div class="col-12 col-lg-10 d-none" id="screen-driver">

                    <div class="row pl-3 pt-3 pr-3">
                        <div class="col-12"><button class="btn btn-danger" id="btn-new-driver">Novo Motorista</button></div>
                    </div>

                    <div class="row pl-3 pr-3 mt-4 mb-1">
                            <div class="col-12 mb-3 title-content">
                                Motoristas
                            </div>
                    </div>


                    <div class="row pl-3 pr-3">
                        <div class="col-12 col-lg-6">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="Insira o nome do motorista" id="input-search-driver-name">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-success" type="button" id="btn-search-driver-name">Pesquisar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row pl-3 pr-3">
                        <div class="col-12 b">
                                <small> (Obs: Clique no botão do status para ativar/desativar o Motorista)</small>
                                <table class="table table-responsive-sm" id="table-result-drivers">
                                        <thead>
                                          <tr>
                                            <th>Status</th>
                                            <th>Nome</th>
                                            <th>CPF</th>
                                            <th>Carro</th>
                                            <th>Sexo</th>
                                            <th>Nascimento</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                            
                                        </tbody>
                                      </table>
                        </div>
                    </div>
                </div>
                <!-- End Screen Driver -->

                <!-- Start ScreenUser -->
                <div class="col-12 col-lg-10 d-none" id="screen-user">

                    <div class="row pl-3 pt-3 pr-3">
                        <div class="col-12"><button class="btn btn-danger" id="btn-new-user">Novo Usuário</button></div>
                    </div>

                    <div class="row pl-3 pr-3 mt-4 mb-1">
                            <div class="col-12 mb-3 title-content">
                                Usuários
                            </div>
                    </div>


                    <div class="row pl-3 pr-3">
                        <div class="col-12 col-lg-6">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="Insira o nome do Passageiro" id="input-search-user-name">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-success" type="button" id="btn-search-user-name">Pesquisar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row pl-3 pr-3">
                        <div class="col-12 b">
                                <table class="table table-responsive-sm" id="table-result-users">
                                        <thead>
                                          <tr>
                                            <th>Nome</th>
                                            <th>CPF</th>     
                                            <th>Sexo</th>
                                            <th>Nascimento</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                      </table>
                        </div>
                    </div>
                </div>
                <!-- End ScreenUser -->

                 <!-- Start ScreenRuns -->
                 <div class="col-12 col-lg-10 d-none" id="screen-race">

                        <div class="row pl-3 pt-3 pr-3">
                            <div class="col-12"><button class="btn btn-danger btn-running" id="btn-new-race">Nova Corrida</button></div>
                        </div>
    
                        <div class="row pl-3 pr-3 mt-4 mb-1">
                                <div class="col-12 mb-3 title-content">
                                    Corridas
                                </div>
                        </div>
    
    
                        <div class="row pl-3 pr-3">
                            <div class="col-12 col-lg-6">
                                <div class="row">
                                    <span class="mr-5">Escolha Em Qual Campo Buscar</span>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="option-race-search" id="option-race-driver" value="driver" checked>
                                        <label class="form-check-label" for="option-race-driver">Motorista</label>
                                      </div>
                                      <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="option-race-search" id="option-race-user" value="user">
                                        <label class="form-check-label" for="option-race-user">Passageiro</label>
                                      </div>
                                </div>
                                <div class="row">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Digite o Nome" id="input-search-race">
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-success" type="button" id="btn-search-race">Pesquisar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row pl-3 pr-3">
                            <div class="col-12 b">
                                    <table class="table table-responsive-sm" id="table-result-races">
                                            <thead>
                                              <tr>
                                                <th>Motorista</th>
                                                <th>Passageiro</th>     
                                                <th>Valor</th>
                                              </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                          </table>
                            </div>
                        </div>
                </div>
                <!-- End ScreenRuns -->

            </div>
        </div>
        <!-- End MainScreen -->

        <!-- Start Modal NewDriver -->
        <div class="modal fade" id="modal-new-driver" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><img src="img/logo-easycar-small.png" class="mr-5" alt=""> Novo Motorista</h5>
                    </div>
                    <div class="modal-body">
                            <form id="form-new-driver" method="POST" action="/save-new-driver">
                                <div class="form-group">
                                    <label for="driver-name">Nome Completo <small class="text-danger ml-2 d-none" id="error-driver-name"> (Nome Invalido)</small></label>
                                    <input type="text" class="form-control" name="driver-name" id="driver-name" placeholder="Insira o nome Completo">
                                </div>
                                <div class="form-group">
                                        <label for="driver-cpf">CPF<small class="text-danger ml-2 d-none" id="error-driver-cpf"> (CPF Inválido)</small></label>
                                        <input type="number" class="form-control" name="driver-cpf" id="driver-cpf" placeholder="Insira o CPF do Motorista">
                                </div>
                                <div class="form-group">
                                        <label for="car-model">Modelo Do Carro<small class="text-danger ml-2 d-none" id="error-driver-model"> (Insira o Modelo do Carro)</small></label>
                                        <input type="text" class="form-control" name="car-model" id="car-model" placeholder="Insira o nome Completo">
                                </div>
                                <div class="row">
                                    <div class="col-5">
                                        <label for="driver-birth">Nascimento<small class="text-danger ml-2 d-none" id="error-driver-birth"> (Data inválida)</small></label>
                                        <input type="date" class="form-control" name="driver-birth" id="driver-birth" placeholder="First name">
                                    </div>
                                    <div class="col-5 offset-2">
                                        <label for="driver-gender">Sexo<small class="text-danger ml-2 d-none" id="error-driver-gender"> (Escolha o Genero)</small></label>
                                        <select class="form-control" id="driver-gender" id="driver-gender">
                                            <option selected>Masculino</option>
                                            <option>Feminino</option>
                                         </select>
                                    </div>
                                </div>
                            </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="btn-send-new-driver">Cadastrar</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Modal NewDriver -->

        <!-- Start Modal NewUser -->
        <div class="modal fade" id="modal-new-user" tabindex="-1" role="dialog"aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><img src="img/logo-easycar-small.png" class="mr-5" alt=""> Novo Usuário</h5>
                    </div>
                    <div class="modal-body">
                            <form id="form-new-user">
                                <div class="form-group">
                                    <label for="user-name">Nome Completo<small class="text-danger ml-2 d-none" id="error-user-name"> (Nome Invalido)</small></label>
                                    <input type="email" class="form-control" name="user-name" id="user-name" placeholder="Insira o nome Completo">
                                </div>
                                <div class="form-group">
                                        <label for="user-cpf">CPF <small class="text-danger ml-2 d-none" id="error-user-cpf"> (CPF Inválido)</small></label>
                                        <input type="number" class="form-control" name="user-cpf" id="user-cpf" placeholder="Insira o CPF do Motorista">
                                </div>
                                <div class="row">
                                    <div class="col-5">
                                        <label for="user-birth">Nascimento <small class="text-danger ml-2 d-none" id="error-user-birth"> (Data Inválida)</small></label>
                                        <input type="date" class="form-control" name="user-birth" id="user-birth">
                                    </div>
                                    <div class="col-5 offset-2">
                                        <label for="user-gender">Sexo <small class="text-danger ml-2 d-none" id="error-user-gender"> (Escolha uma Opção)</small></label>
                                        <select class="form-control" id="user-gender" id="user-gender">
                                            <option selected></option>
                                            <option>Masculino</option>
                                            <option>Feminino</option>
                                         </select>
                                    </div>
                                </div>
                            </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="btn-send-new-user">Cadastrar</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Modal NewUser -->

        <!-- Start Modal MessageSucess -->
        <div class="modal fade" id="modal-success" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><img src="img/logo-easycar-small.png" class="mr-5" alt="">Sucesso</h5>
                    </div>
                    <div class="modal-body">
                         <span id="modal-message-success"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-success" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Modal MessageSucess -->

        <!-- Start Modal MessageFailed -->
        <div class="modal fade" id="modal-failed" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><img src="img/logo-easycar-small.png" class="mr-5" alt="">Operação Não Realizada</h5>
                    </div>
                    <div class="modal-body">
                         <span id="modal-message-failed"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Modal MessageFailed -->

        <!-- Start Modal Load -->
        <div class="modal fade" id="modal-load" tabindex="-1" role="dialog" data-backdrop="false">
            <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="spinner-border text-secondary" role="status">
                            <span class="sr-only">Loading...</span>
                          </div> 
                        
                        <span id="modal-load-message"></span>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Modal Load -->

        <!-- Start Modal NewRace -->
        <div class="modal fade" id="modal-new-race-driver" tabindex="-1" role="dialog"aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><img src="img/logo-easycar-small.png" class="mr-5" alt=""> Escolha o Motorista</h5>
                        </div>
                        <div class="modal-body">
                               <div class="container-fluid">
                                   <div class="row">
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control" placeholder="Nome Do Motorista" id="input-new-race-driver">
                                            <div class="input-group-append">
                                                <button class="btn btn-warning" type="button" id="btn-race-driver">Pesquisar</button>
                                            </div>
                                        </div>
                                   </div>
                                   <div class="row mb-2">
                                       <small>Clique Em Cima Do Nome Do Motorista para escolher</small>
                                   </div>
                                   <div class="row b">
                                        <div class="col-12">
                                            <ul class="list-group" id="list-race-driver">
                                                
                                            </ul>
                                        </div>
                                   </div>
                               </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" id="select-race-driver">Escolher</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
        </div>

        <div class="modal fade" id="modal-new-race-user" tabindex="-1" role="dialog"aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><img src="img/logo-easycar-small.png" class="mr-5" alt=""> Escolha o Passageiro</h5>
                        </div>
                        <div class="modal-body">
                               <div class="container-fluid">
                                   <div class="row">
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control" placeholder="Nome Do Passageiro" id="input-new-race-user">
                                            <div class="input-group-append">
                                                <button class="btn btn-warning" type="button" id="btn-race-user">Pesquisar</button>
                                            </div>
                                        </div>
                                   </div>
                                   <div class="row mb-2">
                                       <small>Clique Em Cima Do Nome Do Passageiro para escolher</small>
                                   </div>
                                   <div class="row b">
                                        <div class="col-12">
                                            <ul class="list-group" id="list-race-user">
                                                
                                            </ul>
                                        </div>
                                   </div>
                               </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" id="select-race-user">Escolher</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
        </div>

        <div class="modal fade" id="modal-new-race-confirm" tabindex="-1" role="dialog"aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><img src="img/logo-easycar-small.png" class="mr-5" alt="">Confirmar Corrida</h5>
                        </div>
                        <div class="modal-body">
                               <div class="container-fluid">
                                    <table class="table">
                                        <tbody>
                                            <tr class="bg-light">
                                                <td>Motorista:</td>
                                                <td id="confirm-driver-race"></td>
                                            </tr>
                                            <tr class="bg-light">
                                                <td>Passageiro:</td>
                                                <td id="confirm-user-race"></td>
                                            </tr>
                                            <tr class="bg-warning">
                                                <td>Preço:</td>
                                                <td>
                                                    <input type="text" class="form-control" id="confirm-price-race">   
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                  
                               </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" id="btn-confirm-race">Confirma Corrida</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
        </div>
        <!-- End Modal NewRace -->


    <script src="src/jquery-3.3.1.min.js"></script>
    <script src="src/bootstrap-4.2.1-dist/js/bootstrap.min.js"></script>
    <script src="src/jquery.maskmoney.min.js"></script>
    <script src="js/Utils.js"></script>
    <script src="js/controller/WindowsController.js"></script>
    <script src="js/controller/DriverController.js"></script>
    <script src="js/controller/UserController.js"></script>
    <script src="js/controller/RaceController.js"></script>
    <script src="js/index.js"></script>
</body>
</html>